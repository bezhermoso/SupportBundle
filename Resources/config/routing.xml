<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bez_support_create_ticket" pattern="/support/ticket/new">
        <default key="_controller">BezSupportBundle:Ticket:new</default>
    </route>

    <route id="bez_support_create_ticket_completed" pattern="/support/ticket/new_completed">
        <default key="_controller">BezSupportBundle:Ticket:newCompleted</default>
    </route>

    <route id="bez_support_list_tickets" pattern="/support/ticket/list">
        <default key="_controller">BezSupportBundle:Ticket:list</default>
    </route>

    <route id="bez_support_view_ticket" pattern="/support/ticket/view/{ticket}">
        <default key="_controller">BezSupportBundle:Ticket:view</default>
    </route>

    <route id="bez_support_new_comment" pattern="/support/ticket/{ticket}/comment/new">
        <default key="_controller">BezSupportBundle:Comment:new</default>
    </route>
</routes>
